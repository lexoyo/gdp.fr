$(document).ready(function() {

	$('#alertesmail_submit,#newsletter_submit').each(function(){
        $(this).after(unescape('%3Cspan class="button-submit-bleu"%3Eaa%3C/span%3E'));
        $(this).hide();
        $(this).next('span.button-submit-bleu').text($(this).val()).click(function(){
            $(this).prev('input.form-submit').click();
        });
    });
